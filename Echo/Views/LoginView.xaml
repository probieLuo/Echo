<UserControl x:Class="Echo.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:Echo.Common.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Echo.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Background>
        <ImageBrush ImageSource="/MyResources/Images/sycbk1.png" Stretch="UniformToFill" />
    </UserControl.Background>
    <UserControl.Resources>
        <SolidColorBrush x:Key="InputBoxHintAssistForegorundBrush" Color="Purple" />

        <Style x:Key="InputIcon" TargetType="materialDesign:PackIcon">
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="30" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <materialDesign:Snackbar x:Name="SnackbarOne"
                                 Grid.Row="0"
                                 VerticalAlignment="Top"
                                 Background="{x:Null}"
                                 Foreground="#FFA07A" />

        <materialDesign:Flipper Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                materialDesign:ElevationAssist.Elevation="Dp16"
                                Opacity="0.75">
            <materialDesign:Flipper.FrontContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone Height="44" Mode="SecondaryMid">
                        <StackPanel Margin="6" Orientation="Horizontal">
                            <Button HorizontalAlignment="Left"
                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                                <materialDesign:PackIcon HorizontalAlignment="Right" Kind="ArrowLeft" />
                            </Button>
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="REGISTER" />
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <Grid Grid.Row="1"
                          Width="450"
                          Height="256"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Row="0"
                                                 Grid.Column="0"
                                                 Margin="20,0,0,0"
                                                 Kind="UserOutline"
                                                 Style="{StaticResource InputIcon}" />
                        <TextBox Grid.Row="0"
                                 Grid.Column="1"
                                 Margin="0,0,100,0"
                                 VerticalAlignment="Bottom"
                                 materialDesign:HintAssist.FloatingScale="0.6"
                                 materialDesign:HintAssist.Foreground="{StaticResource InputBoxHintAssistForegorundBrush}"
                                 materialDesign:HintAssist.Hint="UserName"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource InputBoxHintAssistForegorundBrush}"
                                 FontSize="20"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Text="{Binding UserName}" />
                        <materialDesign:PackIcon Grid.Row="1"
                                                 Grid.Column="0"
                                                 Margin="20,0,0,0"
                                                 Kind="LockOutline"
                                                 Style="{StaticResource InputIcon}" />
                        <PasswordBox Grid.Row="1"
                                     Grid.Column="1"
                                     Margin="0,0,100,0"
                                     VerticalAlignment="Bottom"
                                     cc:PasswordBoxHelper.IsPasswordBindingEnable="True"
                                     cc:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.FloatingScale="0.6"
                                     materialDesign:HintAssist.Foreground="{StaticResource InputBoxHintAssistForegorundBrush}"
                                     materialDesign:HintAssist.Hint="Password"
                                     materialDesign:HintAssist.IsFloating="True"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource InputBoxHintAssistForegorundBrush}"
                                     FontSize="20"
                                     Style="{StaticResource MaterialDesignRevealPasswordBox}" />
                        <Button Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Margin="5"
                                VerticalAlignment="Bottom"
                                Command="{Binding LoginCommand}"
                                Content="Login"
                                Cursor="Hand" />
                    </Grid>
                </Grid>
            </materialDesign:Flipper.FrontContent>
            <materialDesign:Flipper.BackContent>
                <Grid Width="450" Height="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone Padding="6" Mode="SecondaryMid">
                        <StackPanel Orientation="Horizontal">
                            <Button HorizontalAlignment="Left"
                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                    Style="{StaticResource MaterialDesignToolForegroundButton}">
                                <materialDesign:PackIcon HorizontalAlignment="Right" Kind="ArrowLeft" />
                            </Button>
                            <TextBlock Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="LOGIN" />
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <Grid Grid.Row="1"
                          Width="250"
                          Margin="0,20,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Row="0"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0,10,10,0"
                                                 Kind="AccountOutline"
                                                 Style="{StaticResource InputIcon}" />
                        <materialDesign:PackIcon Grid.Row="1"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0,10,10,0"
                                                 Kind="EmailOutline"
                                                 Style="{StaticResource InputIcon}" />
                        <materialDesign:PackIcon Grid.Row="2"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0,10,10,0"
                                                 Kind="LockOutline"
                                                 Style="{StaticResource InputIcon}" />
                        <materialDesign:PackIcon Grid.Row="3"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0,10,10,0"
                                                 Kind="LockCheckOutline"
                                                 Style="{StaticResource InputIcon}" />
                        <TextBox x:Name="x"
                                 Grid.Column="1"
                                 Margin="0,10,0,0"
                                 materialDesign:HintAssist.Hint="UserName"
                                 materialDesign:HintAssist.IsFloating="True"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Text="{Binding RegisterUserName}" />
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="0,10,0,0"
                                 materialDesign:HintAssist.Hint="Email"
                                 materialDesign:HintAssist.IsFloating="True"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 Text="{Binding RegisterEmail}" />

                        <PasswordBox Grid.Row="2"
                                     Grid.Column="1"
                                     Margin="0,10,0,0"
                                     materialDesign:HintAssist.HelperText="At least 6 characters"
                                     materialDesign:HintAssist.Hint="Password"
                                     materialDesign:HintAssist.IsFloating="True"
                                     materialDesign:PasswordBoxAssist.Password="{Binding RegisterPassword, Mode=TwoWay}"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     Style="{StaticResource MaterialDesignRevealPasswordBox}" />
                        <PasswordBox Grid.Row="3"
                                     Grid.Column="1"
                                     Margin="0,18,0,0"
                                     materialDesign:HintAssist.HelperText="Comfirm password"
                                     materialDesign:HintAssist.Hint="Comfirm"
                                     materialDesign:HintAssist.IsFloating="True"
                                     materialDesign:PasswordBoxAssist.Password="{Binding RegisterConfirmPassword, Mode=TwoWay}"
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     Style="{StaticResource MaterialDesignRevealPasswordBox}" />
                    </Grid>
                    <DockPanel Grid.Row="2">
                        <Button Margin="5"
                                Command="{Binding RegisterCommand}"
                                Content="Register"
                                DockPanel.Dock="Left" />
                    </DockPanel>
                </Grid>
            </materialDesign:Flipper.BackContent>
        </materialDesign:Flipper>
    </Grid>
</UserControl>
