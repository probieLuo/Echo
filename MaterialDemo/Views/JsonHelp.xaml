<UserControl x:Class="MaterialDemo.Views.JsonHelp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MaterialDemo.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             FontFamily="Consolas"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <materialDesign:DialogHost x:Name="DialogHost"
                                   Grid.RowSpan="2"
                                   Grid.ColumnSpan="2"
                                   CloseOnClickAway="True"
                                   IsOpen="{Binding DialogHostIsOpen}">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Margin="16">
                    <GroupBox Width="300"
                              MaxHeight="150"
                              Margin="5"
                              materialDesign:HintAssist.Hint="errorsMessage"
                              Header="Errors"
                              Style="{StaticResource MaterialDesignCardGroupBox}">
                        <ScrollViewer Padding="4" materialDesign:ScrollViewerAssist.PaddingMode="Content">
                            <StackPanel>
                                <TextBox Margin="4"
                                         AcceptsReturn="True"
                                         IsReadOnly="True"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="{Binding DialogHostMessage}"
                                         TextWrapping="Wrap" />
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                    <!--<TextBox Margin="5"
                                    Width="300"
                                    MaxHeight="150"
                                    IsReadOnly="True"
                                    FontFamily="Consolas"
                                    Text="{Binding DialogHostMessage}"
                                    materialDesign:HintAssist.Hint="errorsMessage"
                                    AcceptsReturn="True"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />-->
                    <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Content="Close" />
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
        <DockPanel Grid.Row="1" Grid.Column="0">
            <TextBox Name="JsonStr"
                     Margin="5"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     materialDesign:HintAssist.Hint="Please input json"
                     AcceptsReturn="True"
                     FontFamily="Consolas"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="{Binding JsonTextContent}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" />
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1">
            <TextBox Name="NameSpace"
                     Margin="5"
                     materialDesign:HintAssist.Hint="Please input nameSpace"
                     DockPanel.Dock="Top"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="{Binding NameSpaceTextContent}" />
            <TextBox Name="ToCSharpStr"
                     Margin="5"
                     materialDesign:HintAssist.Hint="ToCSharp"
                     AcceptsReturn="True"
                     FontFamily="Consolas"
                     IsReadOnly="True"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Text="{Binding ToCSharpTextContent}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" />
        </DockPanel>

        <WrapPanel Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Orientation="Horizontal">
            <TextBox Margin="5"
                     materialDesign:HintAssist.Hint="Please input className"
                     Text="{Binding ClassName}" />
            <Button Margin="5"
                    Command="{Binding ConverterCSharp}"
                    Content="convert" />
            <Button Margin="5"
                    Command="{Binding SaveSingleFile}"
                    Content="saveSingle" />
            <Button Margin="5"
                    Command="{Binding SaveMutiFlie}"
                    Content="saveMuti" />
            <Button Margin="5"
                    Command="{Binding CopyToCSharpStr}"
                    Content="copy" />
        </WrapPanel>
    </Grid>
</UserControl>
